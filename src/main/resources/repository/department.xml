<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.repository.DepartmentRepository">

    <resultMap id="department" type="org.example.entity.Department">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="tel" column="tel"/>
        <collection property="users" ofType="org.example.entity.User"
        select="org.example.repository.UserRepository.findAllElementByDepartmentId"
        column="id">
        </collection>
    </resultMap>

    <insert id="insert">
        <choose>
            <when test="id == null">
                INSERT INTO department(name, tel)
                VALUES (#{name}, #{tel})
            </when>
            <otherwise>
                INSERT INTO department(id, name, tel)
                VALUES (#{id}, #{name}, #{tel})
            </otherwise>
        </choose>
    </insert>

    <update id="update">
        UPDATE department
        SET name = #{name}, tel = #{tel}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM department
        WHERE id = #{id}
    </delete>

    <select id="findAll" resultMap="department">
        select * from department
    </select>

    <select id="findById" resultType="org.example.entity.Department">
        SELECT *
        FROM department
        WHERE id = #{id}
    </select>

    <select id="findByIdUseAssociationQuery" resultMap="department">
        SELECT *
        FROM department
        WHERE id = #{id}
    </select>
</mapper>